{
  "name": "elzaai/restaurant-api",
  "description": "Full REST API for restaurants (Laravel 12, PHP 8.3, MySQL)",
  "type": "project",
  "license": "proprietary",
  "require": {
    "php": "^8.3",
    "laravel/framework": "^12.0",
    "laravel/sanctum": "^4.0",
    "hflabs/dadata": "^24.4"
  },
  "require-dev": {
    "fakerphp/faker": "^1.23",
    "phpunit/phpunit": "^11.0",
    "laravel/pail": "^1.2",
    "nunomaduro/collision": "^8.8",
    "laravel/sail": "^1.46",
    "laravel/tinker": "^2.10",
    "spatie/laravel-medialibrary": "^11.15"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi"
    ]
  }
}
